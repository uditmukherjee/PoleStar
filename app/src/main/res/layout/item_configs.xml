<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="@dimen/activity_default_margin_left"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

  <android.support.v7.widget.CardView
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:elevation="6dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:textAppearance="?android:attr/textAppearanceLarge"
          tools:text="Reading Mode"
          android:textSize="20sp"
          android:id="@+id/config_title"
          android:textColor="@color/colorTextPrimary"
          android:layout_marginTop="@dimen/activity_default_margin_left"
          android:textStyle="bold"
          android:letterSpacing="2"
          android:layout_marginLeft="@dimen/activity_default_margin_left"
          />
      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="Filters"
          android:textSize="@dimen/text_size_medium"
          android:layout_marginTop="8dp"
          android:textColor="@color/colorPrimaryDark"
          android:id="@+id/filters_title"
          android:layout_below="@+id/config_title"
          android:layout_alignStart="@+id/config_title"
          />
      <View
          android:layout_width="match_parent"
          android:layout_height="1dp"
          android:layout_marginTop="8dp"
          android:layout_marginBottom="8dp"
          android:background="#E0E0E0"
          android:layout_below="@id/filters_title"
          android:id="@+id/include"
          />
      <Button
          style="?android:attr/borderlessButtonStyle"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="Start"
          android:textColor="@color/colorPrimary"
          android:id="@+id/button"
          android:layout_alignTop="@+id/include"
          android:layout_alignParentEnd="true"
          />
    </RelativeLayout>
  </android.support.v7.widget.CardView>
</FrameLayout>